# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# PRE-REQUISITES:
# Repositories:
# dnf copr enable mkrawiec/i3desktop
# dnf copr enable jvcelak/playerctl
#
# Packages:
# i3 i3lock i3-ipc i3status i3blocks playerctl feh compton rofi \
# network-manager-applet terminator smplayer mpv atom numlockx
#
# Fonts: Overpass, FontAwesome
#
# IMPORTANT NOTE:
# Mapping keyboard keycodes and symbols
# Commands: xev, xinput and xmodmap
# It may be needed to map keycodes to symbols on the used keyboard.
# This is especially true for multimedia keys and its XF86keysym symbols.
# Available symbols can be seen in the XF86keysym.h source code file.
#
# General Steps:
# Identify 'keycode' using xev or xinput
# Generate symbol map configuration file: xmodmap -pke > xmodmap.conf
# Based on XF86keysym.h, add the symbols to these keycodes
# Add the keymap to X start: echo 'xmodmap xmodmap.conf' >> ~/.xinitrc
# Restart X
#
# References:
# http://wiki.linuxquestions.org/wiki/Configuring_keyboards
# http://wiki.linuxquestions.org/wiki/XF86_keyboard_symbols
# http://wiki.linuxquestions.org/wiki/Keyboard_mapping_list
#


# Set modifier keys
# Command: xmodmap
# Set mod key to Super
set $sup Mod4

# Set tags color for later use
set $base00 #101218
set $base01 #1f222d
set $base02 #252936
set $base03 #7780a1
set $base04 #C0C5CE
set $base05 #d1d4e0
set $base06 #C9CCDB
set $base07 #ffffff
set $base08 #ee829f
set $base09 #f99170
set $base0A #ffefcc
set $base0B #a5ffe1
set $base0C #97e0ff
set $base0D #97bbf7
set $base0E #c0b7f9
set $base0F #fcc09e

# Set colors
set $bg-color            #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# Set workspace colors
set $ws-bg-color            #2f343f
set $ws-inactive-bg-color   #2f343f
set $ws-text-color          #f3f4f5
set $ws-inactive-text-color #676E7D
set $ws-urgent-bg-color     #E53935

# Set window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #00ff00
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #00ff00
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# Set i3 base directory path
set $i3_path ~/.config/i3

# Set wallpaper directory
set $wallpaper_folder ~/Pictures

# Set custom scripts path
set $scripts ~/.config/i3/scripts

# Set screen names
# Command: xrandr --current
# Command: xrandr --query

# Primary screen
set $screen1 "eDP-1"

# Secondary screen
set $screen2 "DP-2-1"

# Other screens
set $screen3 "DP-2-2"

# Set primary screen
exec --no-startup-id xrandr --output $screen1 --primary --rotate normal

# External screen manual management
# Command: xrandr --query
set $mode_screen 'Enable|Disable - [q|a] Screen1, [w|s] Screen2, [e|d] Screen3, [r|f] Screen4'
bindsym $sup+Mod1+s mode "$mode_screen"

mode "$mode_screen" {
        bindsym q exec --no-startup-id xrandr --output $screen1 --auto --left-of $screen2, mode "default"
        bindsym a exec --no-startup-id xrandr --output $screen1 --auto --off, mode "default"
        bindsym w exec --no-startup-id xrandr --output $screen2 --auto --right-of $screen1, mode "default"
        bindsym s exec --no-startup-id xrandr --output $screen2 --auto --off, mode "default"
        bindsym e exec --no-startup-id xrandr --output $screen3 --auto --right-of $screen1, mode "default"
        bindsym d exec --no-startup-id xrandr --output $screen3 --auto --off, mode "default"
        bindsym r exec --no-startup-id xrandr --output $screen4 --auto --right-of $screen1, mode "default"
        bindsym f exec --no-startup-id xrandr --output $screen4 --auto --off, mode "default"

        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Set TouchPad device
# Commands: xinput list and xinput list-props $touchpad
set $touchpad "SynPS/2 Synaptics TouchPad"

# Set audio out devices
# Command: pactl list sinks
set $audio_out1 alsa_output.pci-0000_00_1b.0.analog-stereo
#set $audio_out1 alsa_output.pci-0000_00_1f.3.analog-stereo

# Set audio in devices
# Command: pactl list sources
set $audio_inp1 alsa_input.pci-0000_00_1b.0.analog-stereo
#set $audio_inp1 alsa_input.pci-0000_00_1f.3.analog-stereo

# Wallpaper
exec_always --no-startup-id feh --bg-scale $wallpaper_folder/wallhaven-64352.png

# Composite window
exec --no-startup-id compton --fading --config $i3_path/compton.conf

# NetworkManager applet
exec_always --no-startup-id nm-applet

# Enable click touch on touchpads
# Commands: xinput list and xinput list-props "SynPS/2 Synaptics TouchPad"
exec --no-startup-id xinput set-prop $touchpad "libinput Tapping Enabled" 1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
#font pango:Overpass 10
font pango:DejaVu Sans Mono 9

# Use Mouse+$sup to drag floating windows to their wanted position
floating_modifier $sup
hide_edge_borders both
new_window pixel 2

# Start a terminal
#bindsym $sup+Return exec i3-sensible-terminal
bindsym $sup+Return exec gnome-terminal

# Kill focused window
bindsym $sup+Shift+q kill

# Start dmenu (a program launcher)
# bindsym $sup+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $sup+d exec --no-startup-id i3-dmenu-desktop

# Rofi bindings
bindsym F9 exec rofi -show run -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699" -o 85
bindsym F12 exec rofi -show window -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699" -o 85

# Start rofi (alternative program launcher)
#bindsym $sup+d exec rofi -show run
#bindsym $sup+d exec rofi -show run -lines 3 -eh 2 -width 100 -fullscreen -opacity "90" \
#-color-enabled -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "Overpass 12"

# Lock screen
bindsym $sup+Ctrl+l exec i3lock -I 15 -e -f --color 0F121B -i $wallpaper_folder/wallhaven-64352.png -t

# Screensaver lock
#exec --no-startup-id xset dpms 600
#exec --no-startup-id xautolock -time 10 -locker i3lock -I 15 -e -f --color 0F121B

# Change focus
bindsym $sup+j focus left
bindsym $sup+k focus down
bindsym $sup+l focus up
bindsym $sup+semicolon focus right

# Alternatively, you can use the cursor keys:
bindsym $sup+Left focus left
bindsym $sup+Down focus down
bindsym $sup+Up focus up
bindsym $sup+Right focus right

# Move focused window
bindsym $sup+Shift+j move left
bindsym $sup+Shift+k move down
bindsym $sup+Shift+l move up
bindsym $sup+Shift+semicolon move right

# Alternatively, you can use the cursor keys:
bindsym $sup+Shift+Left move left
bindsym $sup+Shift+Down move down
bindsym $sup+Shift+Up move up
bindsym $sup+Shift+Right move right

# Split in horizontal orientation
bindsym $sup+h split h

# Split in vertical orientation
bindsym $sup+v split v

# Sticky window
bindsym $sup+Shift+s sticky toggle

# Enter fullscreen mode for the focused container
bindsym $sup+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $sup+s layout stacking
bindsym $sup+w layout tabbed
bindsym $sup+e layout toggle split

# Toggle tiling / floating
bindsym $sup+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $sup+space focus mode_toggle

# Focus the parent container
bindsym $sup+a focus parent

# Focus the child container
#bindsym $sup+d focus child

# Set workspaces variables and specific icon sets
set $workspace1 "1: "
set $workspace2 "2: "
set $workspace3 "3: "
set $workspace4 "4: "
set $workspace5 "5: "
set $workspace6 "6: "
set $workspace7 "7: "
set $workspace8 "8: "
set $workspace9 "9: "
set $workspace0 "10: "

# Switch back and forth between previous workspace
workspace_auto_back_and_forth yes

# Switch to workspace
bindsym $sup+1 workspace $workspace1
bindsym $sup+2 workspace $workspace2
bindsym $sup+3 workspace $workspace3
bindsym $sup+4 workspace $workspace4
bindsym $sup+5 workspace $workspace5
bindsym $sup+6 workspace $workspace6
bindsym $sup+7 workspace $workspace7
bindsym $sup+8 workspace $workspace8
bindsym $sup+9 workspace $workspace9
bindsym $sup+0 workspace $workspace0

# Move focused container to workspace
bindsym $sup+Shift+1 move container to workspace $workspace1
bindsym $sup+Shift+2 move container to workspace $workspace2
bindsym $sup+Shift+3 move container to workspace $workspace3
bindsym $sup+Shift+4 move container to workspace $workspace4
bindsym $sup+Shift+5 move container to workspace $workspace5
bindsym $sup+Shift+6 move container to workspace $workspace6
bindsym $sup+Shift+7 move container to workspace $workspace7
bindsym $sup+Shift+8 move container to workspace $workspace8
bindsym $sup+Shift+9 move container to workspace $workspace9
bindsym $sup+Shift+0 move container to workspace $workspace0

# Workspace default screens
#workspace $workspace1 output $screen1
#workspace $workspace2 output $screen1
#workspace $workspace3 output $screen1
#workspace $workspace4 output $screen1
#workspace $workspace5 output $screen1
